{
  "name": "vscode-lean4-code-actions",
  "displayName": "Lean 4 Code Actions",
  "description": "Refactorings and snippets for Lean 4",
  "version": "1.0.0",
  "license": "MIT",
  "publisher": "dengorbachev",
  "repository": {
    "type": "github",
    "url": "https://github.com/DenisGorbachev/vscode-lean4-code-actions"
  },
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Snippets",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "Refactor",
    "Rename",
    "Move",
    "Snippet"
  ],
  "activationEvents": [
    "onLanguage:lean4"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-lean4-code-actions.autoImport",
        "title": "Lean 4: Auto-import the definition under cursor",
        "shortTitle": "Lean 4: Auto-import"
      },
      {
        "command": "vscode-lean4-code-actions.moveDefinitionToNewFile",
        "title": "Lean 4: Move definition to a new file",
        "shortTitle": "Lean 4: Move definition"
      },
      {
        "command": "vscode-lean4-code-actions.createFreewriteFile",
        "title": "Lean 4: Create a freewrite file"
      },
      {
        "command": "vscode-lean4-code-actions.convertTextToList",
        "title": "Lean 4: Convert a text to list line-by-line"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run esbuild --minify",
    "esbuild": "esbuild ./src/extension.ts --bundle --outfile=./out/src/extension.js --external:vscode --format=cjs --platform=node",
    "build": "yarn run esbuild --sourcemap",
    "watch": "yarn run esbuild --sourcemap --watch",
    "typecheck": "tsc --noEmit",
    "pretest": "yarn run typecheck && yarn run lint",
    "lint": "eslint src --fix --ext ts --ignore-path .gitignore --max-warnings=0",
    "test": "node ./out/test/runTest.js",
    "package": "mkdir -p dist && vsce package -o dist/extension.vsix --yarn",
    "deploy:local": "yarn package && code --install-extension dist/extension.vsix --force"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.4",
    "@types/chai-subset": "^1.3.3",
    "@types/chai-things": "^0.0.35",
    "@types/debug": "^4.1.8",
    "@types/glob": "^8.1.0",
    "@types/luxon": "^3.3.1",
    "@types/node": "16.x",
    "@types/papaparse": "^5.3.7",
    "@types/seedrandom": "^3.0.5",
    "@types/voca": "^1.4.2",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "@vscode/test-electron": "^2.3.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^3.0.0",
    "chai-subset": "^1.6.0",
    "chai-things": "^0.2.0",
    "esbuild": "^0.18.17",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@swc/core": "^1.3.74",
    "@swc/jest": "^0.2.28",
    "@types/jest": "^29.5.3",
    "bignumber.js": "^9.1.1",
    "dotenv": "^16.3.1",
    "fast-check": "^3.12.0",
    "jest": "^29.6.2",
    "jest-config": "^29.6.2",
    "lean4": "https://gitpkg.now.sh/leanprover/vscode-lean4/vscode-lean4",
    "luxon": "^3.3.0",
    "papaparse": "^5.4.1",
    "random": "^4.1.0",
    "remeda": "^1.14.0",
    "seedrandom": "^3.0.5",
    "stacktrace-js": "^2.0.2",
    "voca": "^1.4.1",
    "yaml": "^2.3.1",
    "zod": "^3.21.4"
  },
  "extensionDependencies": [
    "leanprover.lean4"
  ]
}
