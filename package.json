{
  "name": "vscode-lean4-code-actions",
  "displayName": "Lean 4 Code Actions",
  "description": "Refactorings and snippets for Lean 4",
  "version": "1.0.0",
  "license": "MIT",
  "publisher": "dengorbachev",
  "repository": {
    "type": "github",
    "url": "https://github.com/DenisGorbachev/vscode-lean4-code-actions"
  },
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Snippets",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "Refactor",
    "Rename",
    "Move",
    "Snippet"
  ],
  "activationEvents": [
    "onLanguage:lean4"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-lean4-code-actions.autoImport",
        "title": "Lean 4: Auto-import the definition under cursor",
        "shortTitle": "Lean 4: Auto-import"
      },
      {
        "command": "vscode-lean4-code-actions.moveDefinitionToNewFile",
        "title": "Lean 4: Move definition to a new file",
        "shortTitle": "Lean 4: Move definition"
      },
      {
        "command": "vscode-lean4-code-actions.createFreewriteFile",
        "title": "Lean 4: Create a freewrite file"
      },
      {
        "command": "vscode-lean4-code-actions.convertTextToList",
        "title": "Lean 4 Extra: Convert a text to list line-by-line"
      }
    ],
    "languages": [
      {
        "id": "lean4",
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run esbuild-base --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "yarn run esbuild-base --sourcemap",
    "esbuild-watch": "yarn run esbuild-base --sourcemap --watch",
    "compile": "tsc -p ./ || echo 'Errors ignored due to compilation errors in vscode-lean4 - our dependency'",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --fix --ext ts --ignore-path .gitignore --max-warnings=0",
    "test": "node ./out/test/runTest.js",
    "package": "mkdir -p dist && vsce package -o dist/extension.vsix --yarn",
    "deploy:local": "yarn package && code --install-extension dist/extension.vsix --force"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.14.195",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/voca": "^1.4.2",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "@vscode/test-electron": "^2.3.0",
    "esbuild": "^0.18.17",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "lean4": "https://gitpkg.now.sh/leanprover/vscode-lean4/vscode-lean4",
    "remeda": "^1.14.0",
    "voca": "^1.4.1"
  },
  "extensionDependencies": [
    "leanprover.lean4"
  ]
}
